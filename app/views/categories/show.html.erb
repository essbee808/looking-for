<h2><%= @category.name %></h2>
    <%= button_to 'Edit', edit_category_path(@category), method: :get %><br>
    <%= button_to 'Delete', category_path(@category), method: :delete %><br>
    <br>
<br>

<% if @category.programs.empty? %>
    <p>Help us grow and <%= link_to 'add a program', new_category_program_path(@category) %>.</p><br>
<% else %>
    <%= link_to 'Add A Program', new_category_program_path(@category.id) %><br>
    <br>
    <h4><%= pluralize(@category.programs.count, 'program') %> found:</h4>

    <% @category.programs.each do |p| %>
        <%= link_to p.name, category_program_path(@category, p) %><br>
    <% end %>
<% end %>
<%= link_to 'Back to Categories', categories_path %><br>

