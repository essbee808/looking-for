<% if @user_program.nil? %>
    <%= form_with model: UserProgram.new do |f| %>
    <%= f.hidden_field :program_id, value: @program.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "Bookmark" %>
    <% end %>
<% else %>
    <%= link_to user_program_path(@user_program), method: :delete do %>
        <i class="bi bi-bookmark-star-fill"></i>Remove
    <% end %>
<% end %>
