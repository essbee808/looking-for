<% if @user_program.nil? %>
    <%= form_with model: UserProgram.new do |f| %>
    <%= f.hidden_field :program_id, value: @program.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "Save", class: "btn btn-outline-success btn-lg" %>
    <% end %>
<% else %>
    <%= button_to "Save", user_program_path(@user_program), method: :delete, class: "btn btn-success btn-lg" %>
    <i>Saved to <%= link_to "bookmarks.", bookmarks_path%></i>
<% end %>