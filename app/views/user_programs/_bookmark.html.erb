
<% if params[:id].present? %>
    <% if @bookmark.nil? %>
        <% @bookmark = UserProgram.new %>
        <%= form_with model: @bookmark do |f| %>
        <%= f.hidden_field :program_id, value: @program.id %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.submit "Bookmark" %>
        <% end %>
    <% else %>
        <%= link_to user_program_path(@bookmark), method: :delete do %>
            <i class="bi bi-bookmark-star-fill"></i>Remove
        <% end %>
    <% end %>
<% else %>
    <%= link_to 'Remove', user_program_path(@bookmark), method: :delete %> 
<% end %>
