<% if user_signed_in? %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <%= link_to "Looking For", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">

        <li class="nav-item <%= active_class(about_path)%>">
          <%= link_to "About", about_path, class: "nav-link" %>
        </li>

        <li class="nav-item <%= active_class(categories_path)%>">
          <%= link_to "Categories", categories_path, class: "nav-link" %> 
        </li>

        <li class="nav-item <%= active_class(programs_path)%>">
          <%= link_to "Programs", programs_path, class: "nav-link" %>
        </li>

        <li class="nav-item <%= active_class(contact_path)%>">
          <%= link_to "Contact", contact_path, class: "nav-link" %>
   
        <li class="nav-item dropdown">
          <%= link_to "Hi, #{current_user.name}!", edit_user_registration_path, {:class => "nav-link dropdown-toggle", :id => "navbarDropdownMenuLink", 'data-bs-toggle': 'dropdown', 'aria-expanded': 'false' } %>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <li><%= link_to "Dashboard", root_path, class: "dropdown-item" %></li>
            <li><%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %></li>
            <li><%= link_to "Sign Out", destroy_user_session_path, class: "dropdown-item" %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>
<% else %>
  <%= link_to 'Register', new_user_registration_path %> or <%= link_to 'Sign in', new_user_session_path %>
<% end %>


