<h1>Most Programs</h1>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Created Programs</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each_with_index do |u, index| %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= u.name %></td>
                <td><%= u.email %></td>
                <td><%= u.created_programs.count %></td>
            </tr>
        <% end %>             
    </tbody>
</table>