<h2>Edit <%= @program.name %></h2>

<div class="row">
    <div class="col">
    <%= form_with model: @program do |f| %>
        <%= f.label 'Category:' %>
        <%= f.collection_select(:category_id, Category.all, :id, :name, prompt: true) %><br>
    </div>
</div>

<div class="row">
    <div class="col">
        <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="col">
        <%= f.text_field :website, class: "form-control" %><br>
    </div>
</div>

<div class="row">
    <div class="col">
        <%= f.text_area :description, class: "form-control" %><br>

        <%= f.submit 'Save Changes'%>
        <% end %>
    </div>
</div>

