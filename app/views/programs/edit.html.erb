<h2>Edit <%= @program.name %></h2>

<%= form_with model: @program do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <br>
    <%= f.label :description %>
    <%= f.text_area :description %><br>
    <br>
    <%= f.label :website %>
    <%= f.text_field :website %><br>
    <br>
    <h4>Category<h4>
    <%= f.collection_select(:category_id, Category.all, :id, :name, prompt: true)%>
    <h4>or create a new category:<h4>
    <%= f.fields_for :category do |c| %>
        <%= c.label :name %>
        <%= c.text_field :name %>
    <% end %>
    <br>
    <%= f.submit 'Edit' %>
<% end %>


