<h2>Create A Program</h2>
<%= form_with model: @program do |f| %>
<% if @program.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@program.errors.count, "error") %> prohibited this program from being
        saved:</h2>

      <ul>
        <% @program.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<% if params[:category_id] %>
  <h3>Category: <%= @category.name %></h3>
<% else %>
  <%= f.collection_select(:category_id, Category.all, :id, :name, prompt: 'Select a category')%>
  <p>or create a new category:<p>
  <%= f.fields_for :category do |c| %>
    <%= c.label :name %>
    <%= c.text_field :name %>
  <% end %>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <br>

  <br>
  <%= f.label :description %>
  <%= f.text_area :description %><br>
  <br>
  <%= f.label :website %>
  <%= f.text_field :website %><br>
  <br>

  <%= f.submit 'Submit' %>
<% end %>