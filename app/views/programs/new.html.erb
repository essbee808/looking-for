<h2>Add A Program</h2>
<%= form_with model: @program do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <br>

    <br>
    <%= f.label :description %>
    <%= f.text_area :description %><br>
    <br>
    <%= f.label :website %>
    <%= f.text_field :website %><br>
    <br>
    <h3>Create a category:<h3>
    <%= f.fields_for :category do |c| %>
        <%= c.label :name %>
        <%= c.text_field :name %>
    <% end %>

    <%= f.submit 'Submit' %>
<% end %>