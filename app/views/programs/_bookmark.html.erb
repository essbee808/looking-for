<h3>Bookmark Form Test</h3>
<% if @user_program.exists? %>
    
    <%= button_to 'Remove', user_program_path(@user_program), method: :delete %>
<% else %>
    <%= form_with model: UserProgram.new do |f| %>
    <%= f.hidden_field :program_id, value: @program.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "Bookmark" %>
    <% end %>
<% end %>

