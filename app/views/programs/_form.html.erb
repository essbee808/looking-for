
<div class="container">
<%= form_with model: ([@category, @program]) do |f| %>
<% if @program.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@program.errors.count, "error") %> prohibited this program from being
        saved:</h2>
      <ul>
        <% @program.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>
<div class="row">
    <div class="col-md6">
        <% if @category %>
            <%= f.hidden_field :category_id, value: @category.id %>
        <% else %>
            <%= f.collection_select(:category_id, Category.all, :id, :name, prompt: 'Select a category')%><br>
        <% end %>
    </div>

<div class="row">
    <div class="col-md6">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %><br>
    </div>

    <div class="col-md6">
        <%= f.label :organization, class: "form-label" %>
        <%= f.text_field :organization, class: "form-control", placeholder: "Organization Name" %><br>
    </div>


    <div class="col-md6">
        <%= f.label :website, class: "form-label" %>
        <%= f.text_field :website, class: "form-control", placeholder: "www.example.com" %><br>
    </div>
</div>

<div class="row">
    <div class="col-md6">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control", placeholder: "Description", rows: "8", cols: "60" %><br>

    <%= f.submit 'Create'%>
    <% end %>
    </div>
</div>
</div>
</div>


